<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head') %>
</head>
<body>
  <%- include('../partials/nav') %>

  <div class="contact contact-new">
    <h2>Edit</h2>    
    <form action="/contacts/<%= contact._id %>?_method=put" method="post" class="contact-form">
      <div>
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="<%= contact.name %>">
      </div>
      <div>
        <label for="emial">Email</label>
        <input type="text" name="email" id="email" value="<%= contact.email %>">
      </div>
      <div>
        <label for="phone">Phone</label>
        <input type="text" name="phone" id="phone" value="<%= contact.phone %>">
      </div>
      <button type="submit">Submit</button>
    </form>
  </div>
</body>
</html>

